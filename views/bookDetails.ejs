<!doctype html>
<html lang="en">
    <head>
        <title>Trang chu</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />

        <!-- Bootstrap CSS v5.2.1 -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="../src/public/css/style.css" />
        <style>
            body {
            font-family: 'Poppins', sans-serif;
            background: #191A1C;
            color: #fff;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            overflow-x: hidden;
        }
            header {
            background-color: rgba(0, 0, 0, 0.7);
            width: 100%;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .offcanvas-start {
            width: 0;
            transition: width 0.3s ease;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            font-family: 'Poppins', sans-serif;
        }
        #main-content {
            transition: margin-left 0.3s ease;
            width: 100%;
        }
        .offcanvas.show {
            width: 300px;
        }
        .offcanvas-title {cursor: pointer;}
         
        .search-container {
            display: flex;
            align-items: center;
            background: rgba(0, 0, 0, 0.7);
            padding: 8px 12px;
            border-radius: 10px;
            color: white;
            width: 300px;
            margin-right: 10px;
        }
        .search-container input {
            background: transparent;
            border: none;
            outline: none;
            color: white;
            flex-grow: 1;
        }
        .search-container input::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .cover-container {
            display: flex;
            justify-content: center; /* Horizontally center */
            align-items: center; /* Vertically center (if needed) */
            width: 100%;
        }
        .cover-container img {
            width: 100%;
            height: auto;
            object-fit: cover;
            border-radius: 5px; /* Slight rounding for a clean look */
        }

        .summary-container::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 20px; /* Adjust as needed */
            background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
        }

        .summary-container {
            max-height: 100px; /* Limits height */
            overflow: hidden;
            position: relative;
        }

        .summary-text {
            display: -webkit-box;
            -webkit-line-clamp: 10; /* Limits the number of visible lines */
            -webkit-box-orient: vertical;
            overflow: hidden;
            position: relative;
            text-overflow: ellipsis;
        }
        .manga-banner {
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 300px; /* Adjust as needed */
            width: 100%;
            position: relative;
            display: flex;
            align-items: center; /* Centers content vertically */
            justify-content: center;
        }

        /* Overlay Effect */
        .manga-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7); /* Dark overlay for readability */
        }

        /* Content Positioning */
        .manga-content {
            position: relative;
            z-index: 1;
        }

        .chapter-list {
            list-style: none;
            padding: 0;
        }

        .chapter-item {
            background-color: #222;
            padding: 10px;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .chapter-item a {
            color: white;
            text-decoration: none;
            display: block;
        }
        </style>
    </head>

    <body>
        <header>
            <nav class="navbar navbar-expand navbar-light bg-transparent d-flex w-100">
                <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" style="background: transparent; border: none; outline: none;color: white;">
                                ‚ò∞
                            </button>
                        </li>
                </ul>
                <ul class="nav navbar-nav ms-auto">
                        <li class="nav-item">
                            <div class="search-container">
                                <input type="text" placeholder="Search">
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown ms-auto">
                                <button
                                    class="btn btn-secondary dropdown-toggle"
                                    type="button"
                                    id="triggerId"
                                    data-bs-toggle="dropdown"
                                    aria-haspopup="true"
                                    aria-expanded="false"
                                >
                                <span><%=username %></span>
                                </button>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="triggerId">
                                    <a class="dropdown-item" href="/auth/update-info">Cap Nhat Thong Tin</a>
                                    <a class="dropdown-item" href="/auth/update-password">Doi Mat Khau</a>
                                    <a class="dropdown-item" href="/logout">Dang Xuat</a>
                                </div>
                            </div>
                        </li>
                </ul>
            </nav>
        </header>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" data-bs-backdrop="false" aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header" style="color: white;">
                <h5 class="offcanvas-title" data-bs-dismiss="offcanvas" style="font-weight: 800;" id="offcanvasNavbarLabel">aBOOKS</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close" ></button>
            </div>
            <hr>
            <div class="offcanvas-body" style="color: white;">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/home/home1">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/home/genres">The Loai</a></li>
                    <li class="nav-item"><a class="nav-link" href="/home/follow">Follow</a></li>
                    <li class="nav-item"><a class="nav-link" href="/home/about">About</a></li>
                </ul>
            </div>
        </div>
        <div class="manga-banner" style="background-image: url('<%= book.cover %>');">
            <div class="manga-overlay"></div>
            <div class="container manga-content text-white py-5">
              <div class="row">
                <!-- Manga Cover -->
                <div class="col-md-2 text-center">
                  <img src="<%= book.cover %>" alt="Manga Cover" class="img-fluid rounded shadow">
                </div>
          
                <!-- Manga Details -->
                <div class="col-md-10">
                  <h1 class="fw-bold"><%= book.title %></h1>
                  <p class="mb-1">By <strong><%= book.author %></strong></p>
          
                  <!-- Status & Genres -->
                  <div class="d-flex flex-wrap align-items-center mb-2">
                    <div class="mt-2">
                        <% book.genre.forEach(genre => { %>
                            <span class="badge bg-secondary"><%= genre.trim() %></span>
                        <% }) %>

                        <% if (book.status === "Completed") { %>
                            <span class="badge ms-3" style="background-color: #00C9F5;"><%= book.status %></span>
                        <% } else if (book.status === "Ongoing") { %>
                            <span class="badge bg-success ms-3"><%= book.status %></span>
                        <% } %>
                    </div>
                  </div>
          
                  <!-- Rating & Stats -->
                  <div class="d-flex align-items-center mb-3">
                    <span class="text-warning fs-5 me-2">‚≠ê <%= book.rating %></span>
                    <span class="me-3">üìñ <%= book.follow %> </span>
                  </div>
          
                  <!-- Action Buttons -->
                  <div class="d-flex gap-2">
                    <button class="btn btn-danger"><i class="bi bi-book"></i> Reading</button>
                    <button class="btn btn-outline-light"><i class="bi bi-plus"></i> Add to MDList</button>
                    <button class="btn btn-secondary"><i class="bi bi-arrow-right-circle"></i> Continue Reading</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <main id="main-content" class="p-3">
            <div class="container mt-4">
                <p><%= book.summary %></p>
                <hr>
                <div class="row">
                    <div class="col-md-3">
                        <div class="row">
                            <div class="mb-3">
                                <strong class="d-block">Author</strong>
                                <span class="badge bg-dark text-white"><%= book.author %></span>
                            </div>
                        
                            <div class="mb-3">
                                <strong class="d-block">Artist</strong>
                                <span class="badge bg-dark text-white"><%= book.author %></span>
                            </div>
                        </div>
                        <!-- Genres Section -->
                        <div>
                            <strong class="d-block mb-2">Genres</strong>
                            <div class="d-flex flex-wrap gap-2">
                                <% book.genre.forEach(genre => { %>
                                    <span class="badge bg-secondary"><%= genre %></span>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h4 style="font-weight: bold;">Chapters</h4>
                        <ul class="chapter-list">
                            <% chapters.forEach(chapter => { %>
                                <li class="chapter-item">
                                    <a href="/bookDetails/chapter/<%= chapter.bookId %>/<%= chapter.chapterNumber %>">
                                        Chapter <%= chapter.chapterNumber %>
                                    </a>
                                </li>
                            <% }) %>
                        </ul>
                        </ul>
                    </div>

                </div>
            </div>
            
        </main>
        <!-- Bootstrap JavaScript Libraries -->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
        <script>
            var offcanvasElement = document.getElementById('offcanvasNavbar');
            var mainContent = document.getElementById('main-content');
            var openSidebarBtn = document.getElementById('openSidebar');
            var closeSidebarBtn = document.getElementById('closeSidebar');
            
            openSidebarBtn.addEventListener('click', function () {
                offcanvasElement.classList.add('show');
                mainContent.style.marginLeft = '300px';
            });
            
            closeSidebarBtn.addEventListener('click', function () {
                offcanvasElement.classList.remove('show');
                mainContent.style.marginLeft = '0';
            });
        </script>
    </body>
</html>
